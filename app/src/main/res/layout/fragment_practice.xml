<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme2"
    android:orientation="vertical"
    tools:context=".Core.fragment.PracticeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:tint="@color/theme"
                app:srcCompat="@drawable/yuyin4">

            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textColor="@color/theme"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:tint="@color/yellow"
                app:srcCompat="@drawable/logo_3">

            </ImageView>

        </LinearLayout>

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/practice_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/practice_kind1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:background="@drawable/white_clicked_bg">

                <ImageView
                    android:id="@+id/practice_jiaotong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/chaosu">

                </ImageView>

                <TextView
                    android:id="@+id/practice_kind1_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="5dip"
                    android:text="交 通 执 行 类"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:textStyle="bold">


                </TextView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/practice_kind2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:background="@drawable/white_clicked_bg">

                <ImageView
                    android:id="@+id/practice_zhian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/jubu">

                </ImageView>

                <TextView
                    android:id="@+id/practice_kind2_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="5dip"
                    android:text="治 安 执 法 类"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:textStyle="bold">

                </TextView>

            </FrameLayout>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>